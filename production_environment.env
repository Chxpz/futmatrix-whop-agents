# Production Environment Configuration Template
# Copy this file to .env and set your production values

# REQUIRED - OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# REQUIRED - Database Configuration (choose one)
# Option 1: Direct PostgreSQL URL
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_REST_URL=https://your-project.supabase.co/rest/v1/

# REQUIRED - API Authentication Keys (set at least one)
API_KEY=your_primary_api_key
API_KEY_1=your_first_api_key
API_KEY_2=your_second_api_key
API_KEY_3=your_third_api_key
API_KEY_4=your_fourth_api_key
API_KEY_5=your_fifth_api_key

# OPTIONAL - Performance Configuration
RATE_LIMIT=100
AGENT_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=10

# OPTIONAL - Message Broker (for distributed mode)
RABBITMQ_URL=amqp://user:password@host:port/
REDIS_URL=redis://host:port

# OPTIONAL - MCP Servers
MCP_SERVER_1=https://your-mcp-server-1.com
MCP_SERVER_2=https://your-mcp-server-2.com

# OPTIONAL - Logging
LOG_LEVEL=INFO

# OPTIONAL - Security
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# OPTIONAL - Business Rules
ENABLE_FINANCIAL_COMPLIANCE=true
ENABLE_CONTENT_MODERATION=true

# Development Mode (set to false for production)
DEVELOPMENT_MODE=false